<label style="text-align: center; display: flex; justify-content: center">@ViewData["Message"]</label>
<br />
<br />
<form asp-action="OnEditTable" asp-controller="Home" style="display: flex; flex-direction: column; text-align: center; justify-content: center; align-items: center;">
    <label>Editing a table</label>
    <br />
    <input type="text" name="id" placeholder="Table ID" style="width: 300px;" class="form-control" />
    <br />
    <input type="text" name="restaurantId" placeholder="Restaurant ID" style="width: 300px;" class="form-control" />
    <br />
    <input type="text" name="tableNumber" placeholder="Table Number" style="width: 300px;" class="form-control" />
    <br />
    <input type="text" name="seats" placeholder="Seats" style="width: 300px;" class="form-control" />
    <br />
    <input type="submit" style="width: 100px;" class="btn btn-primary" />
</form>
